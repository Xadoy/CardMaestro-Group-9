<style>

/* Carousel base class */
.carousel {
  margin-bottom: 2rem;
  width: 100%;
}
/* Since positioning the image, we need to help out the caption */
.carousel-caption {
  bottom: 3rem;
  z-index: 10;
}

.carousel-inner{
  width:100%;
  height: 33rem;

}

.carousel-control-prev {
    filter: invert(100%);
    width: 3%
}

.carousel-control-next {
    filter: invert(100%);
    width: 3%
}

.card-img-top {
    margin-left: auto;
    margin-right: auto;
     width:60%;
    height: auto;
    overflow:hidden;
}






</style>
   
<div class="container-fluid">
  <div class="row-fluid pt-2">

 
<h3 class="pt-2 pb-1 pl-4">Most Popular Cards</h3>









 <!--Carousel Wrapper-->
    <div id="multi-item-example" class="carousel slide carousel-multi-item pl-5 pr-5" data-ride="carousel">

     

      <!--Indicators-->
      <ol class="carousel-indicators">
        <li data-target="#multi-item-example" data-slide-to="0" class="active"></li>
        <li data-target="#multi-item-example" data-slide-to="1"></li>
        <li data-target="#multi-item-example" data-slide-to="2"></li>
      </ol>
      <!--/.Indicators-->

      <!--Slides-->
      <div class="carousel-inner" role="listbox">

        <%count=0%>
        <%active=1%>
        <%arr=Array.new%>
        <% @collection_card_owned.each_with_index do |card,index| %>
        
            <%arr<<card%>
            <%count=count+1%>
        
            <%if count < 3 && index != @collection_card_owned.count - 1%>    
            
            <%elsif active==1%>
            
                
                <div class="carousel-item active">
                 <div class="row">
                    <% arr.each do |card_entry| %>
                    

                        <div class="col-md-4">
                        <div class="card mb-2 pt-1">
                            <img class="card-img-top" src=<%= card_entry.card.image_url%>  alt="Card image">
                            <div class="card-body">
                                <h4 class="card-title"><%=card_entry.card.name%></h4>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                                    card's content.</p>
                                <a class="btn btn-primary">Add to wishlist</a>
                            </div>
                        </div>
                        </div>
                    <%end%>




                 </div>
                </div>
                    


                <%count=0%>
                <%arr=arr.clear%>
                
                
                <%active=0%>


             <%else%>

            

                <div class="carousel-item">
                 <div class="row">
                    <% arr.each do |card_entry1| %>
                    

                        <div class="col-md-4">
                        <div class="card mb-2">
                            <img class="card-img-top" src=<%= card_entry1.card.image_url%>  alt="Card image">
                            <div class="card-body">
                            <h4 class="card-title"><%=card_entry1.card.name%></h4>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                                card's content.</p>
                            <a class="btn btn-primary">Add to wishlist</a>
                            </div>
                        </div>
                        </div>
                    <%end%>




                 </div>
                </div>
                    


                <%count=0%>
                <%arr = arr.clear%> 
                

             <%end%>
             


        
        <%end%>

       


      </div>
      <!--/.Slides-->

            <a class="carousel-control-prev" href="#multi-item-example" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#multi-item-example" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
        

    </div>
    <!--/.Carousel Wrapper-->








