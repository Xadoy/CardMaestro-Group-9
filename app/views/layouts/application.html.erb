<!DOCTYPE html>
<html>
  <head>
    <title>Card Maestro</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

    <%= favicon_link_tag asset_path('CardMaestroLogoPartial.png') %>


     <%= render 'layouts/navigation' %>
    </head>

  <body>
  
  
  
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  

    <footer class="container py-5">
  <div class="row">
    
    <div class="col-6 col-md">
      <a class="btn btn-link" href=<%=about_index_path%>><h5>About</h5></a>


      <ul class="list-unstyled text-small">
        <li><a class="text-muted" href="#">Magic The Gathering</a></li>
      </ul>
    </div>
    <div class="col-6 col-md">
      <a class="btn btn-link" href=<%=terms_index_path%>><h5>Terms of service</h5></a>
      
    </div>
    <div class="col-6 col-md">
      <a class="btn btn-link" href=<%=privacy_index_path%>><h5>Privacy</h5></a>
      
    </div>
    <div class="col-6 col-md">
      <a class="btn btn-link" href=<%=contact_index_path%>><h5>Contact Us</h5></a>
      <ul class="list-unstyled text-small">
        <li><a class="text-muted" href="https://www.facebook.com/"><%=fa_icon "facebook-square"%>Facebook</a></li>
        <li><a class="text-muted" href="https://twitter.com/"><%=fa_icon "twitter-square"%>Twitter</a></li>
        <li><a class="text-muted" href="https://instagram.com/"><%=fa_icon "instagram"%>Instagram</a></li>
      </ul>
      
      
    </div>

    <div class="col-6 col-md">
      <a class="btn btn-link" href=<%=faq_index_path%>><h5>FAQ</h5></a>
      
    </div>

    <div class="col-6 col-md">
      <a class="btn btn-link" href=<%=sitemap_index_path%>><h5>Site map</h5></a>
      
    </div>
  </div>
</footer>
    

  </body>
</html>
