<div class="container-fluid">
  <div class="row justify-content-center align-items-center pt-4">
    <div class="col-sm-6 col-sm-offset-3">
      <h1> Edit card</h1>
      <%= form_with scope: :card, method: "put", url: collection_path(card_id:@target_card.id), local: true do |form| %>  
          <%= form.hidden_field :user, value: current_user.email %>
          <p>
            <%= form.label :set, "Set" %><br>
            <%= form.select(:set, @sets.collect { |set| [set.code] },  :class=>"js-searchable", selected:@target_set) %>
          </p>
          <p>
            <%= form.label :card_name %><br>
            <%= form.text_field :card_name, value:@target_card.card_name %>
          </p>

          <p>
          <%= form.check_box(:foil, checked:@target_card.foil) %>
          <%= form.label(:foil, "Foil") %>
          </p>
          <p>
          <%= form.radio_button(:quality, "Mint", checked:@target_card.quality=='Mint') %>
          <%= form.label(:quality, "Mint") %>
          <%= form.radio_button(:quality, "Near-Mint", checked:@target_card.quality=='Near-Mint') %>
          <%= form.label(:quality, "Near-Mint") %>
          <%= form.radio_button(:quality, "Light-Play", checked:@target_card.quality=='Light-Play') %>
          <%= form.label(:quality, "Light-Play") %>
          <%= form.radio_button(:quality, "Heavy-Play", checked:@target_card.quality=='Heavy-Play') %>
          <%= form.label(:quality, "Heavy-Play") %>
          </p>
          
          <p>
          <%= form.label :value %><br>
          <%= form.text_area :value, value:@target_card.value %>
          </p>
          <p>
            <%= form.submit 'Submit change to ' + @target_type %>
          </p>
        
        <% end %>
    </div>
  </div>
</div>
